<div class="row">
  <div class="col-md-2">
    <%= link_to 'P', new_page_path, class: "btn btn-primary btn-circle btn-lg active" %>
  </div>
  <p id="notice"><%= notice %></p>
  <table>
    <tbody>
      <% @pages.each do |page| %>
        <tr>
          <td>
            <div class="col-md-8">
              <%= link_to 'View', page %>
              <%= link_to 'Edit', edit_page_path(page) %>
              <%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %>
              <br><br />
              <%= page.body.html_safe %>
              <hr>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

  

