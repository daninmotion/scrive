
<div class="row">
  <div class="dashboard">
    <div class="col-md-11 col-md-offset-1">
      <% if current_user %>
        <%= link_to 'P', new_page_path, class: "btn btn-primary btn-circle btn-lg active" %>
      <% else %>
        <%= link_to "Subscribe to start writing", new_subscribe_path %>
      <% end %>
      <br><br />
      <p><%= link_to "HOME", root_path %></p>
      <p><%= link_to "LOGOUT", destroy_user_session_path, method: :delete %>
      </p>
      <p><%= link_to "SETTINGS", edit_user_registration_path %><p>
    </div>
  </div>
</div>

<% if current_user %>
  <div class="row">
    <div class="col-md-10 col-md-offset-2">
      <div class="col-md-8 search">
        <%= form_tag pages_path, method: :get do %>
          <p>
            <%= text_field_tag :q, nil, placeholder: "Search" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
  <br><br />

  <div id="pages">
    <%= render @pages %>
  </div>
<% end %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="text-center">
      <%= will_paginate @pages %>
    </div>
  </div>
</div>

  

  

